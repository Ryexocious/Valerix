generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String   @id @default(uuid())
  productId String
  quantity  Int
  status    String   @default("PENDING") // PENDING, CONFIRMED, FAILED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
